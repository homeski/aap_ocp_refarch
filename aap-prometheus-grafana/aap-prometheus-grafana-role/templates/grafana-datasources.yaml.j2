apiVersion: grafana.integreatly.org/v1beta1
kind: GrafanaDatasource
metadata:
  name: grafana-datasource
  namespace: {{ prometheus_namespace }}
spec:
  datasource:
    access: proxy
    isDefault: true
    jsonData:
      timeInterval: 5s
      tlsSkipVerify: true
    name: prometheus
    type: prometheus
    url: 'http://prometheus-operated:9090'
  instanceSelector:
    matchLabels:
      dashboards: grafana-cloud
  plugins:
    - name: grafana-clock-panel
      version: 1.3.0
